{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "spa in node for vite & playwright",
  "compilerOptions": {
    "composite": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "types": [
      "node"
    ],
    "skipLibCheck": true
  },
  "include": [
    "vite.config.*",
    "playwright.config.*"
  ]
}
