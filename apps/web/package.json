{
  "name": "@workspace/web",
  "type": "module",
  "version": "1.0.0",
  "private": true,
  "description": "Bulletproof Next.js 15 template",
  "author": "Tri Rizeki Rifandani",
  "license": "MIT",
  "scripts": {
    "typecheck": "tsc --noEmit",
    "test:install": "playwright install --with-deps chromium",
    "test:report": "dotenvx run --env-file=.env.dev -- playwright show-report",
    "test": "dotenvx run --env-file=.env.dev -- cross-env DEBUG=pw:api playwright test",
    "test:ui": "dotenvx run --env-file=.env.dev -- playwright test --ui --headed",
    "test:ci": "dotenvx run --env-file=.env.dev -- playwright test --forbid-only --shard=${{ matrix.shardIndex }}/${{ matrix.shardTotal }}",
    "dev": "cp .env.dev .env.local && next dev --port 3002",
    "dev:prod": "cp .env.prod .env.local && next dev --port 3002",
    "dev:turbo": "cp .env.dev .env.local && next dev --turbopack --port 3002",
    "build": "cp .env.dev .env.local && next build",
    "build:prod": "cp .env.prod .env.local && next build",
    "build:prod:analyze": "cp .env.prod .env.local && cross-env ANALYZE=true next build",
    "start": "next start"
  },
  "dependencies": {
    "@dotenvx/dotenvx": "1.42.2",
    "@formkit/auto-animate": "0.8.2",
    "@hookform/resolvers": "5.0.1",
    "@internationalized/date": "3.8.0",
    "@next/bundle-analyzer": "15.3.1",
    "@nosecone/next": "1.0.0-beta.6",
    "@radix-ui/react-scroll-area": "1.2.6",
    "@t3-oss/env-nextjs": "0.13.4",
    "@tanstack/react-query": "5.75.0",
    "@tanstack/react-query-devtools": "5.75.0",
    "@workspace/core": "workspace:*",
    "embla-carousel-react": "8.6.0",
    "flags": "4.0.0",
    "input-otp": "1.4.2",
    "ky": "1.8.1",
    "motion": "12.9.4",
    "next": "15.3.1",
    "next-intl": "4.1.0",
    "next-safe-action": "7.10.8",
    "next-themes": "0.4.6",
    "nuqs": "2.4.3",
    "radashi": "12.4.0",
    "react": "19.1.0",
    "react-aria": "3.39.0",
    "react-aria-components": "1.8.0",
    "react-dom": "19.1.0",
    "react-hook-form": "7.56.1",
    "react-stately": "3.37.0",
    "recharts": "2.15.3",
    "schema-dts": "1.1.5",
    "server-only": "0.0.1",
    "sonner": "2.0.3",
    "tailwind-merge": "3.2.0",
    "tailwind-variants": "1.0.0",
    "ts-pattern": "5.7.0",
    "type-fest": "4.40.1",
    "zod": "3.24.2",
    "zod-form-data": "2.0.7",
    "zod-validation-error": "3.4.0"
  },
  "devDependencies": {
    "@faker-js/faker": "9.7.0",
    "@hookform/devtools": "4.4.0",
    "@iconify/react": "6.0.0",
    "@playwright/test": "1.52.0",
    "@tailwindcss/postcss": "4.1.5",
    "@types/node": "22.15.3",
    "@types/react": "19.1.2",
    "@types/react-dom": "19.1.3",
    "@workspace/typescript-config": "workspace:*",
    "cross-env": "7.0.3",
    "postcss": "8.5.3",
    "tailwindcss": "4.1.5",
    "tailwindcss-animate": "1.0.7",
    "tailwindcss-react-aria-components": "2.0.0",
    "typescript": "5.8.3"
  }
}
