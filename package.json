{
  "name": "fe-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "React, nextjs monorepo template",
  "author": "Tri Rizeki Rifandani",
  "engines": {
    "node": ">=22"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "scripts": {
    "prepare": "husky",
    "clean": "find . \\( -name node_modules -type d -o -name dev-dist -type d -o -name dist -type d -o -name html -type d -o -name playwright -type d -o -name playwright-report -type d -o -name playwright-test-results -type d -name bun-lock.json -type f \\) | xargs rm -rf && bun install",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:inspector": "eslint --inspect-config",
    "typecheck": "run-p web:typecheck spa:typecheck",
    "regression": "run-p lint web:typecheck spa:typecheck",
    "web:dev": "bun --filter @workspace/web dev",
    "web:typecheck": "bun --filter @workspace/web typecheck",
    "spa:dev": "bun --filter @workspace/spa dev",
    "spa:typecheck": "bun --filter @workspace/spa typecheck",
    "spa:test:install": "bun --filter @workspace/spa test:install",
    "spa:test": "bun --filter @workspace/spa test"
  },
  "devDependencies": {
    "@antfu/eslint-config": "3.12.0",
    "@commitlint/cli": "19.6.0",
    "@commitlint/config-conventional": "19.6.0",
    "@eslint-react/eslint-plugin": "1.19.0",
    "@eslint/compat": "1.2.4",
    "@eslint/eslintrc": "3.2.0",
    "@next/eslint-plugin-next": "15.1.2",
    "@prettier/plugin-xml": "3.4.1",
    "@tanstack/eslint-plugin-router": "1.97.19",
    "@workspace/typescript-config": "workspace:*",
    "eslint": "9.17.0",
    "eslint-plugin-depend": "0.12.0",
    "eslint-plugin-format": "0.1.3",
    "eslint-plugin-jsx-a11y": "6.10.2",
    "eslint-plugin-react-hooks": "5.1.0",
    "eslint-plugin-react-refresh": "0.4.16",
    "eslint-plugin-tailwindcss": "3.17.5",
    "globals": "15.13.0",
    "husky": "9.1.7",
    "npm-run-all2": "7.0.2",
    "typescript": "5.7.2"
  }
}
