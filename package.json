{
  "name": "fe-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "React, nextjs monorepo template",
  "author": "Tri Rizeki Rifandani",
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "prepare": "husky",
    "clean": "rimraf --glob \"**/node_modules\" \"**/dev-dist\" \"**/dist\" \"**/html\" \"**/playwright\" \"**/playwright-report\" \"**/playwright-test-results\" \"**/bun.lock\" \"**/.next\" && bun install",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:inspector": "eslint --inspect-config",
    "typecheck": "run-p web:typecheck spa:typecheck",
    "regression": "run-p lint web:typecheck spa:typecheck",
    "web:dev": "bun --filter @workspace/web dev",
    "web:dev:turbo": "bun --filter @workspace/web dev:turbo",
    "web:build": "bun --filter @workspace/web build",
    "web:build:analyze": "bun --filter @workspace/web build:analyze",
    "web:typecheck": "bun --filter @workspace/web typecheck",
    "web:test:install": "bun --filter @workspace/web test:install",
    "web:test:report": "bun --filter @workspace/web test:report",
    "web:test": "bun --filter @workspace/web test",
    "web:test:ui": "bun --filter @workspace/web test:ui",
    "web:test:ci": "bun --filter @workspace/web test:ci",
    "spa:dev": "bun --filter @workspace/spa dev",
    "spa:build": "bun --filter @workspace/spa build",
    "spa:typecheck": "bun --filter @workspace/spa typecheck",
    "spa:test:install": "bun --filter @workspace/spa test:install",
    "spa:test": "bun --filter @workspace/spa test",
    "spa:test:ui": "bun --filter @workspace/spa test:ui",
    "spa:test:ci": "bun --filter @workspace/spa test:ci"
  },
  "devDependencies": {
    "@antfu/eslint-config": "4.1.0",
    "@commitlint/cli": "19.6.1",
    "@commitlint/config-conventional": "19.6.0",
    "@eslint-react/eslint-plugin": "1.25.0",
    "@eslint/compat": "1.2.5",
    "@eslint/eslintrc": "3.2.0",
    "@next/eslint-plugin-next": "15.1.2",
    "@prettier/plugin-xml": "3.4.1",
    "@tanstack/eslint-plugin-router": "1.98.0",
    "@workspace/typescript-config": "workspace:*",
    "eslint": "9.19.0",
    "eslint-plugin-depend": "0.12.0",
    "eslint-plugin-format": "1.0.1",
    "eslint-plugin-jsx-a11y": "6.10.2",
    "eslint-plugin-react-hooks": "5.1.0",
    "eslint-plugin-react-refresh": "0.4.18",
    "eslint-plugin-tailwindcss": "3.18.0",
    "globals": "15.14.0",
    "husky": "9.1.7",
    "npm-run-all2": "7.0.2",
    "rimraf": "6.0.1",
    "typescript": "5.7.3"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
