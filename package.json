{
  "name": "fe-monorepo",
  "version": "1.0.0",
  "private": true,
  "packageManager": "bun@1.3.9",
  "description": "React.js, Next.js, and Expo Monorepo Template",
  "author": "Tri Rizeki Rifandani",
  "engines": {
    "node": ">=24.12.0"
  },
  "scripts": {
    "prepare": "husky",
    "compose:up": "docker compose -f docker/docker-compose.yml up --build",
    "clean": "rimraf --glob \"**/node_modules\" \"**/dev-dist\" \"**/dist\" \"**/build\" \"**/html\" \"**/playwright\" \"**/playwright-report\" \"**/playwright-test-results\" \"**/bun.lock\" \"**/.next\" \"**/.tanstack\" \"**/.expo\" \"**/.tamagui\" && bun install",
    "bump:deps": "bunx npm-check-updates --deep -u --peer -x expo*,@expo*,@dev-plugins*,@babel*,metro*,react-native*,@react-navigation*,tamagui,@tamagui*",
    "bump:ui": "bunx shadcn@latest add @intentui/all -o -c apps/spa",
    "cs": "changeset",
    "cs:v": "changeset version",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:inspector": "eslint --inspect-config",
    "typecheck": "bun run --parallel web:typecheck spa:typecheck expo:typecheck",
    "lint-typecheck": "bun run --parallel lint web:typecheck spa:typecheck expo:typecheck",
    "spa": "bun --elide-lines=0 --filter @workspace/spa",
    "web": "bun --elide-lines=0 --filter @workspace/web",
    "expo": "bun --elide-lines=0 --filter @workspace/expo",
    "spa:ci": "bun --filter @workspace/spa",
    "web:ci": "bun --filter @workspace/web",
    "expo:ci": "bun --filter @workspace/expo",
    "spa:typecheck": "bun spa:ci typecheck",
    "web:typecheck": "bun web:ci typecheck",
    "expo:typecheck": "bun expo:ci typecheck"
  },
  "devDependencies": {
    "@antfu/eslint-config": "7.4.3",
    "@changesets/cli": "2.29.8",
    "@commitlint/cli": "20.4.1",
    "@commitlint/config-conventional": "20.4.1",
    "@eslint-react/eslint-plugin": "2.12.4",
    "@next/eslint-plugin-next": "16.1.6",
    "@prettier/plugin-xml": "3.4.2",
    "@tanstack/eslint-plugin-router": "1.155.0",
    "@workspace/typescript-config": "workspace:*",
    "eslint": "9.39.2",
    "eslint-plugin-depend": "1.4.0",
    "eslint-plugin-expo": "1.0.0",
    "eslint-plugin-format": "1.4.0",
    "eslint-plugin-jsx-a11y": "6.10.2",
    "eslint-plugin-react-hooks": "7.0.1",
    "eslint-plugin-react-refresh": "0.5.0",
    "eslint-plugin-tailwindcss": "3.18.2",
    "globals": "17.3.0",
    "husky": "9.1.7",
    "rimraf": "6.1.2",
    "typescript": "5.9.3"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "trustedDependencies": [
    "@tailwindcss/oxide",
    "esbuild",
    "sharp",
    "unrs-resolver"
  ]
}
